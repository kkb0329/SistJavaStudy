package day0221;

import java.util.Scanner;

public class WhileScanSumAvg_10 {

	public static void main(String[] args) {
		/*
		 * 점수(1~100) 입력받다가 0입력시 빠져나온후 총갯수와 총점 평균 구하기
		 * 
		 * ex)
		 * 77
		 * 88
		 * -10
		 *     다시입력바람
		 * 99
		 * 110
		 *     다시입력바람
		 * =================
		 * 총갯수: 3
		 * 총점:**
		 * 평균:**.**   
		 * */
		
		Scanner sc = new Scanner(System.in);
		
		int su;
		int tot=0;
		double avg;
		int cnt = 0;
		
		while (true) 
		{
			System.out.println("점수를 입력하시오(1~100)");
			su = sc.nextInt();
			if(su==0)
				break;
			
			if(su<0 || su>100)
			{
				System.out.println("\t다시 입력바람");
				continue;
			}
				cnt ++;
			tot += su;
			avg = tot/cnt;
		}
		
		System.out.printf("총 갯수: %f\n총점: %f\n평균: %f",cnt,tot,avg);
		
		

	}

}
