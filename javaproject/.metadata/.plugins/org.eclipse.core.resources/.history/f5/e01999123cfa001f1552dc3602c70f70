package day0306;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

public class Ex5FruitRead {
	
	
	//메서드 만든후 출력하시오            제목은 과일입고현황     과일명   입고수량    입고단가
	public static void fruitRead()
	{
		String fileName = "C:\\sist0217\\work\\fruit.txt";
		
		try {
		FileReader fr = null;
		BufferedReader br = null;
		
		
		fr = new FileReader(fileName);
		br = new BufferedReader(fr);
		
		System.out.println("과일입고현황\t과일명\t입고수량\t입고단가");
		System.out.println("-------------------------------------------");
		
		while(true)
		{
			String s;
				s=br.readLine();
				
				if (s==null)
					break;
				
				String [] data = s.split(":");
				
				System.out.println(data[0]+"\t"+data[1]+"\t"+data[2]+"\t"+data[3]+"\t"+data[4]);
				
				
		} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
		} catch (Exception e) {
				// TODO: handle exception
			} 
			
		}
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		fruitRead();
	}

}
