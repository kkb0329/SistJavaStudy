package day0221;

import java.util.Scanner;

public class GuguScan_07 {

	public static void main(String[] args) {
		// 원하는 구구단 입력하시오
		// 5
		// 5단만 출력하시오!!!
		// 반복적으로 출력하다가 0을 누르면 종료되게
		
		Scanner sc = new Scanner(System.in);
		
		int su;
		
		
		System.out.println("원하는 구구단 입력하시오");
		su = sc.nextInt();
		
		while(true)
		{	
			if (su==0) 
			{
				System.out.println("종료합니다");
				break;
			}
		for(int i = 1;i<=9;i++)
		{
			for(int j = 1;j<=9;j++)
			{
				
				System.out.println(su+"X"+j+"="+su*j);
			}
		
		}
		}

	}

}
